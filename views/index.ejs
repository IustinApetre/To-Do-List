<!-- views/index.ejs -->
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">  
    <link  href="/styles/style.css" rel="stylesheet" type="text/css">
    <title>Today's tasks</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
  

</head>

<body class="p-3 m-0 border-0 bd-example m-0 border-0">
    <%- include ('partials/header.ejs') %>
        <h1 id="title">Main Tasks of today</h1>
        <form action="/add" method="POST" class="aliniere">
            <input type="text" name="task" placeholder="Add a new task" required class=" list-group-success input">
            <button type="submit" class="btn btn-outline-success">Add</button>
        </form>
        <ul class="list-group list-group-success aliniere">
            <% tasks.forEach((task, index)=> { %>
                <li class="list-group-item list-group-item-success">
                    <input class="form-check-input me-1" type="checkbox" value="" id="firstCheckboxStretched">
                   <div class="list-item-title"><%= task %></div> 
                        </form>
                        <form action="/delete" method="POST" style="display:inline;" id="buton">
                            <input type="hidden" name="index" value="<%= index %>">
                            <button type="submit" class="btn btn-outline-success">Delete</button>
                        </form>
                </li>
                <% }); %>
        </ul>
        <%- include('partials/footer') %>
</body>

</html>